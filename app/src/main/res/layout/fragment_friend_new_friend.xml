<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_friend_new_friend_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="10dp"
        android:background="@color/background"
        >
        <ImageView
            android:id="@+id/item_fragment_friend_listView_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/new_friend"
            />
        <TextView
            android:id="@+id/item_fragment_friend_listView_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="@string/fragment_wish_friend_new_friend"
            android:textColor="@color/firstTitle"
            android:textSize="18sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/divider"
        />

</LinearLayout>