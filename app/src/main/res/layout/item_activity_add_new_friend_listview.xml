<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_activity_add_new_friend_listView_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:riv_border_color="@color/white"
            app:riv_oval="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_activity_add_new_friend_listView_contact_name_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="@string/item_activity_payment_record_listview_nickname"
                android:textColor="@color/firstTitle"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/item_activity_add_new_friend_listView_nickname_text"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="@string/item_activity_payment_record_listview_nickname"
                android:textColor="@color/firstTitle"
                android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/item_activity_add_new_friend_listView_fellow_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/corner_red_bg"
            android:clickable="true"
            android:focusable="false"
            android:textSize="14sp"
            android:text="@string/to_fellow"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>