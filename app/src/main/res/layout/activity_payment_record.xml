<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/themeRed"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/activity_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/firstTitle"
            android:text="@string/activity_payment_record_stage"
            />
        <TextView
            android:id="@+id/activity_payment_budget_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/thirdTitle"
            android:text="@string/activity_payment_record_budget"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/divider"/>
        <ListView
            android:id="@+id/activity_payment_budget_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:scrollbars="none"
            />
    </LinearLayout>

</LinearLayout>